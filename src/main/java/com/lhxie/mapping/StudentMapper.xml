	</update>


	<resultMap type="com.lhxie.model.Student" id="ListAllStudentMap"
		extends="BaseResultMap">
		<collection property="courses" javaType="list"
			ofType="com.lhxie.model.Course">
			<id property="courseid" column="courseid" jdbcType="INTEGER" />
			<result property="coursename" column="coursename" jdbcType="VARCHAR" />
		</collection>
	</resultMap>
	<select id="listAllStudent" resultMap="ListAllStudentMap">
		SELECT
		course_student.id,
		course_student.studentid,
		course_student.courseid,
		student.userid,
		student.username,
		course.courseid,
		course.coursename
		FROM student JOIN
		course_student on student.userid=course_student.studentid
		JOIN course on course.courseid=course_student.courseid


	</select>





